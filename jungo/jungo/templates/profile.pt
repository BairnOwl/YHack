<metal:main use-macro="load: layout.pt">
    <metal:content fill-slot="head">
        <title>${user.name}</title>
    </metal:content>
    <metal:content fill-slot="header">
        <h1>${user.name}</h1>
        <h3>${user.username}</h3>
    </metal:content>
    <div metal:fill-slot="content">
        <h2>Interests</h2>
        <ul>
            <li tal:repeat="interest user.interests">
                ${interest.name}
            </li>
        </ul>
    </div>
</metal:main>